<Window x:Class="TypTop.Gui.CreateAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypTop.Gui"
        mc:Ignorable="d"
        Title="Create Account" Height="140" Width="270" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Gebruikersnaam:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
        <Label Content="Wachtwoord:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="29,36,0,0"/>
        <Button x:Name="OkButton" Content="Ok" HorizontalAlignment="Left" Margin="27,0,0,10" VerticalAlignment="Bottom" Width="90" Click="OkButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,27,10" VerticalAlignment="Bottom"  Width="90" Click="CancelButton_Click"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Margin="114,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129"/>
        <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="114,40,0,0"  VerticalAlignment="Top" Width="129"/>
    </Grid>
</Window>
